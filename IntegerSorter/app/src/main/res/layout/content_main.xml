<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.njit.gradesorter.MainActivity"
    tools:showIn="@layout/activity_main">

<EditText android:id="@+id/edit_infile"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    android:hint="@string/infile"/>

<EditText android:id="@+id/edit_outfile"
    android:layout_height="50dp"
    android:layout_width="match_parent"
        android:hint="@string/outfile"/>

<Button android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="@string/sortlist"
    android:onClick="sorter"
    android:layout_gravity="center_horizontal"/>

<!-- Spacing and horizontal rule (line) to separate Button from TextView -->

<Space android:layout_height="10dp"
    android:layout_width="match_parent"/>

<View android:layout_height="0.5dp"
    android:layout_width="fill_parent"
    android:background="#000000"/>

<Space android:layout_height="10dp"
    android:layout_width="match_parent"/>

<TextView android:id="@+id/text_main"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:text="@string/text_main"/>

</LinearLayout>
